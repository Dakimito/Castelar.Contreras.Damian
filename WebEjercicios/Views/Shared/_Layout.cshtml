                            <li><a href="/Ejercicios/FormulariosHTML5.cshtml">Formularios HTML5</a> </li>
                        </ul>
                    </div>
                </div>
            </article>
        </aside>
        <!-- Pie de pagina -->
        <footer>
            <p>&copy; @DateTime.Now.Year - Universidad Abierta Interamericana</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)

</body>
</html>